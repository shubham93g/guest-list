# Google Sheets
GOOGLE_SHEET_ID=
GOOGLE_SERVICE_ACCOUNT_EMAIL=
# Paste raw multi-line PEM string in Vercel dashboard.
# In .env.local, use \n-escaped single line: "-----BEGIN RSA PRIVATE KEY-----\nMIIE...\n-----END RSA PRIVATE KEY-----\n"
GOOGLE_PRIVATE_KEY=

# Twilio Verify (OTP)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_VERIFY_SERVICE_SID=
# OTP delivery channel: 'sms' (default) or 'whatsapp'
# WhatsApp requires a Meta-approved WhatsApp Business Account on the Verify Service.
TWILIO_VERIFY_CHANNEL=sms

# JWT session signing (generate with: openssl rand -hex 32)
JWT_SECRET=

# Event configuration — static, set once and unlikely to change
# NEXT_PUBLIC_* vars are bundled client-side (used on the public landing page)
NEXT_PUBLIC_COUPLE_NAMES=
NEXT_PUBLIC_WEDDING_DATE=
# Server-side only — shown to authenticated guests on the welcome page
WEDDING_DAY=
VENUE_NAME=
VENUE_CITY=

# Mock mode — set independently to bypass each service during development/testing
MOCK_SHEETS=             # bypass Google Sheets allowlist check and RSVP writes
MOCK_TWILIO=             # bypass Twilio OTP (any 6-digit code is accepted)
MOCK_SHEETS_GUEST_NAME=  # guest name returned for all lookups when MOCK_SHEETS=true
